<UserControl x:Class="Demo_ReportPrinter.Views.DataEntryPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:viewModels="clr-namespace:Demo_ReportPrinter.ViewModels"
             xmlns:services="clr-namespace:Demo_ReportPrinter.Services.Shared">
    <UserControl.DataContext>
        <viewModels:DataEntryViewModel/>
    </UserControl.DataContext>

    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="数据录入" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>

            <Border BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="5" Padding="10">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition Width="200"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- 用户名 -->
                    <Label Grid.Row="0" Grid.Column="0" Content="用户名:" Style="{StaticResource DataEntryLabel}" Target="{Binding ElementName=UserNameTextBox}"/>
                    <TextBox x:Name="UserNameTextBox" Grid.Row="0" Grid.Column="1" Text="{Binding UserName, Mode=TwoWay}" Style="{StaticResource DataEntryTextBox}"/>

                    <!-- 邮箱 -->
                    <Label Grid.Row="0" Grid.Column="2" Content="邮箱:" Style="{StaticResource DataEntryLabel}" Target="{Binding ElementName=EmailTextBox}"/>
                    <TextBox x:Name="EmailTextBox" Grid.Row="0" Grid.Column="3" Text="{Binding Email, Mode=TwoWay}" Style="{StaticResource DataEntryTextBox}"/>

                    <!-- 出生日期 -->
                    <Label Grid.Row="1" Grid.Column="0" Content="出生日期:" Style="{StaticResource DataEntryLabel}" Target="{Binding ElementName=BirthDatePicker}"/>
                    <DatePicker x:Name="BirthDatePicker" Grid.Row="1" Grid.Column="1" SelectedDate="{Binding BirthDate, Mode=TwoWay}" Style="{StaticResource DataEntryDatePicker}"/>

                    <!-- 部门 -->
                    <Label Grid.Row="1" Grid.Column="2" Content="部门:" Style="{StaticResource DataEntryLabel}" Target="{Binding ElementName=DepartmentComboBox}"/>
                    <ComboBox x:Name="DepartmentComboBox" Grid.Row="1" Grid.Column="3" ItemsSource="{Binding Departments}" SelectedItem="{Binding Department, Mode=TwoWay}" Style="{StaticResource DataEntryComboBox}"/>

                    <!-- 错误消息 -->
                    <TextBlock Grid.Row="2" Grid.ColumnSpan="4" Text="{Binding ErrorMessage}" Foreground="Red" Margin="5" TextWrapping="Wrap"/>

                    <!-- 按钮 -->
                    <StackPanel Grid.Row="3" Grid.ColumnSpan="4" Orientation="Horizontal" HorizontalAlignment="Right" Margin="5">
                        <Button Content="重置" Command="{Binding ResetDataCommand}" Style="{StaticResource DataEntryButton}"/>
                        <Button Content="保存" Command="{Binding SaveDataCommand}" Style="{StaticResource PrimaryButton}"/>
                    </StackPanel>
                </Grid>
            </Border>
        </StackPanel>
    </Grid>
</UserControl>