<UserControl x:Class="Xinglin.ReportTemplateEditor.WPF.Views.EditPanelView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Xinglin.ReportTemplateEditor.WPF.Views"
             xmlns:controls="clr-namespace:Xinglin.ReportTemplateEditor.WPF.Controls"
             xmlns:selectors="clr-namespace:Xinglin.ReportTemplateEditor.WPF.Selectors"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="800"
             Background="White">
    <!-- 元素模板 -->
    <UserControl.Resources>
        <DataTemplate x:Key="TextElementTemplate">
            <controls:TextControl Element="{Binding}" ViewType="Edit"/>
        </DataTemplate>
        
        <DataTemplate x:Key="ImageElementTemplate">
            <controls:ImageControl Element="{Binding}" ViewType="Edit"/>
        </DataTemplate>
        
        <DataTemplate x:Key="LineElementTemplate">
            <controls:LineControl Element="{Binding}" ViewType="Edit"/>
        </DataTemplate>
        
        <!-- 元素模板选择器 -->
        <selectors:ElementTemplateSelector x:Key="ElementTemplateSelector"
                                           TextElementTemplate="{StaticResource TextElementTemplate}"
                                           ImageElementTemplate="{StaticResource ImageElementTemplate}"
                                           LineElementTemplate="{StaticResource LineElementTemplate}"/>
    </UserControl.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- 工具栏 -->
        <Border Grid.Row="0" Margin="5" Background="#F0F0F0" CornerRadius="3">
            <StackPanel Orientation="Horizontal" Margin="5" Background="#F0F0F0">
            <TextBlock Text="编辑面板" FontWeight="Bold" FontSize="16" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <Button Content="添加文本" Command="{Binding AddTextElementCommand}"/>
            <Button Content="添加图片" Command="{Binding AddImageElementCommand}"/>
            <Button Content="添加线条" Command="{Binding AddLineElementCommand}"/>
            <Button Content="保存" Command="{Binding SaveCommand}" Margin="0,0,10,0"/>
            <Button Content="取消" Command="{Binding CancelCommand}"/>
            </StackPanel>
        </Border>
        
        <!-- 编辑画布 -->
        <Border Grid.Row="1" BorderBrush="LightGray" BorderThickness="1" Background="White" Margin="5">
            <ItemsControl ItemsSource="{Binding Elements}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <Canvas Background="#F8F8F8" Width="800" Height="1000"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemContainerStyle>
                    <Style TargetType="ContentPresenter">
                        <Setter Property="Canvas.Left" Value="{Binding X}"/>
                        <Setter Property="Canvas.Top" Value="{Binding Y}"/>
                    </Style>
                </ItemsControl.ItemContainerStyle>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <ContentControl Content="{Binding}" ContentTemplateSelector="{StaticResource ElementTemplateSelector}"/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </Border>
    </Grid>
</UserControl>