<UserControl x:Class="Xinglin.ReportTemplateEditor.WPF.Views.DataEntryPanelView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Xinglin.ReportTemplateEditor.WPF.Views"
             xmlns:vm="clr-namespace:Xinglin.ReportTemplateEditor.WPF.ViewModels"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.DataContext>
        <vm:DataEntryViewModel />
    </UserControl.DataContext>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- 工具栏 -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="5">
            <Button Content="新建" Command="{Binding NewCommand}" Margin="0,0,5,0"/>
            <Button Content="保存" Command="{Binding SaveCommand}" Margin="0,0,5,0"/>
            <Button Content="加载" Command="{Binding LoadCommand}" Margin="0,0,5,0"/>
        </StackPanel>
        
        <!-- 录入元素列表 -->
        <ScrollViewer Grid.Row="1" Margin="5">
            <ItemsControl ItemsSource="{Binding EntryElements}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate DataType="{x:Type vm:DataEntryElementViewModel}">
                        <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                            <!-- 前置Label -->
                            <TextBlock Text="{Binding Label}"
                                       Width="{Binding LabelWidth}"
                                       Height="25"
                                       FontFamily="Microsoft YaHei"
                                       FontSize="12"
                                       VerticalAlignment="Center"
                                       TextAlignment="Right"
                                       Margin="0,0,8,0">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Foreground" Value="#333333"/>
                                        <Style.Triggers>
                                            <!-- 必填项显示红色星号 -->
                                            <DataTrigger Binding="{Binding IsRequired}" Value="True">
                                                <Setter Property="Text" Value="{Binding Label, StringFormat='{}{0} *'}"/>
                                                <Setter Property="Foreground" Value="#FF0000"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                            
                            <!-- 动态控件 -->
                            <ContentControl>
                                <ContentControl.Style>
                                    <Style TargetType="ContentControl">
                                        <Style.Triggers>
                                            <!-- 文本框 -->
                                            <DataTrigger Binding="{Binding ElementType}" Value="Text">
                                                <Setter Property="ContentTemplate">
                                                    <Setter.Value>
                                                        <DataTemplate>
                                                            <TextBox Text="{Binding Value, Mode=TwoWay}"
                                                                     Width="200"
                                                                     Height="25"
                                                                     FontFamily="Microsoft YaHei"
                                                                     FontSize="12"
                                                                     BorderBrush="#CCCCCC"
                                                                     BorderThickness="1"
                                                                     Padding="5,0"/>
                                                        </DataTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                            </DataTrigger>
                                            
                                            <!-- 数字框 -->
                                            <DataTrigger Binding="{Binding ElementType}" Value="Number">
                                                <Setter Property="ContentTemplate">
                                                    <Setter.Value>
                                                        <DataTemplate>
                                                            <TextBox Text="{Binding Value, Mode=TwoWay}"
                                                                     Width="100"
                                                                     Height="25"
                                                                     FontFamily="Microsoft YaHei"
                                                                     FontSize="12"
                                                                     BorderBrush="#CCCCCC"
                                                                     BorderThickness="1"
                                                                     Padding="5,0"
                                                                     TextAlignment="Center"/>
                                                        </DataTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                            </DataTrigger>
                                            
                                            <!-- 日期选择 -->
                                            <DataTrigger Binding="{Binding ElementType}" Value="Date">
                                                <Setter Property="ContentTemplate">
                                                    <Setter.Value>
                                                        <DataTemplate>
                                                            <DatePicker SelectedDate="{Binding Value, Mode=TwoWay}"
                                                                        Width="150"
                                                                        Height="25"/>
                                                        </DataTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                            </DataTrigger>
                                            
                                            <!-- 下拉选择 -->
                                            <DataTrigger Binding="{Binding ElementType}" Value="Dropdown">
                                                <Setter Property="ContentTemplate">
                                                    <Setter.Value>
                                                        <DataTemplate>
                                                            <ComboBox SelectedItem="{Binding Value, Mode=TwoWay}"
                                                                      ItemsSource="{Binding Options}"
                                                                      Width="150"
                                                                      Height="25"
                                                                      FontFamily="Microsoft YaHei"
                                                                      FontSize="12"/>
                                                        </DataTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </ContentControl.Style>
                            </ContentControl>
                        </StackPanel>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
        
        <!-- 状态信息 -->
        <TextBlock Grid.Row="2" Text="{Binding StatusMessage}" Margin="5" Foreground="#666666"/>
    </Grid>
</UserControl>
