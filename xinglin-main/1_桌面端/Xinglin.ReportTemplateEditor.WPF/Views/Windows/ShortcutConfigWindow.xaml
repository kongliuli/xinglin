<Window x:Class="Xinglin.ReportTemplateEditor.WPF.Views.Windows.ShortcutConfigWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Xinglin.ReportTemplateEditor.WPF.Views.Windows"
        xmlns:models="clr-namespace:Xinglin.ReportTemplateEditor.WPF.Models"
        mc:Ignorable="d"
        Title="快捷键配置"
        Height="500"
        Width="600"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="10,5"/>
        </Style>
        <Style TargetType="TextBlock">
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        <DataTemplate x:Key="ShortcutMappingTemplate" DataType="models:ShortcutMapping">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="100"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" Text="{Binding DisplayName}"/>
                <TextBlock Grid.Column="1" Text="{Binding GetShortcutString}" HorizontalAlignment="Center"/>
                <Button Grid.Column="2" Content="编辑" Command="{Binding DataContext.EditShortcutCommand, RelativeSource={RelativeSource AncestorType={x:Type ListView}}}" CommandParameter="{Binding}"/>
            </Grid>
        </DataTemplate>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto" MinHeight="60"/>
        </Grid.RowDefinitions>
        
        <ListView Grid.Row="0" ItemsSource="{Binding Mappings}" ItemTemplate="{StaticResource ShortcutMappingTemplate}" Margin="10">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="命令" Width="300" DisplayMemberBinding="{Binding DisplayName}"/>
                    <GridViewColumn Header="当前快捷键" Width="150" DisplayMemberBinding="{Binding GetShortcutString}"/>
                    <GridViewColumn Header="操作" Width="100">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="编辑" Command="{Binding DataContext.EditShortcutCommand, RelativeSource={RelativeSource AncestorType={x:Type ListView}}}" CommandParameter="{Binding}"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>
        
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="10">
            <Button Content="重置为默认" Command="{Binding ResetToDefaultCommand}"/>
            <Button Content="确定" Command="{Binding SaveCommand}"/>
            <Button Content="取消" Command="{Binding CancelCommand}"/>
        </StackPanel>
    </Grid>
</Window>
