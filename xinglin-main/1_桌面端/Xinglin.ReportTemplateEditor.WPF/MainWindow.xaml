<Window x:Class="Xinglin.ReportTemplateEditor.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Xinglin.ReportTemplateEditor.WPF"
        xmlns:controls="clr-namespace:Xinglin.ReportTemplateEditor.WPF.Controls"
        xmlns:views="clr-namespace:Xinglin.ReportTemplateEditor.WPF.Views"
        xmlns:selectors="clr-namespace:Xinglin.ReportTemplateEditor.WPF.Selectors"
        mc:Ignorable="d"
        Title="报表模板编辑器" Height="768" Width="1366"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <Style TargetType="TabItem">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="10,5"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="10,5"/>
        </Style>
        
        <!-- 元素模板 -->
        <DataTemplate x:Key="TextElementTemplate">
            <controls:TextControl Element="{Binding}" ViewType="Edit"/>
        </DataTemplate>
        
        <DataTemplate x:Key="ImageElementTemplate">
            <controls:ImageControl Element="{Binding}" ViewType="Edit"/>
        </DataTemplate>
        
        <DataTemplate x:Key="LineElementTemplate">
            <controls:LineControl Element="{Binding}" ViewType="Edit"/>
        </DataTemplate>
        
        <!-- 元素模板选择器 -->
        <selectors:ElementTemplateSelector x:Key="ElementTemplateSelector"
                                           TextElementTemplate="{StaticResource TextElementTemplate}"
                                           ImageElementTemplate="{StaticResource ImageElementTemplate}"
                                           LineElementTemplate="{StaticResource LineElementTemplate}"/>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 菜单栏 -->
        <Menu Grid.Row="0" Background="#F0F0F0" BorderThickness="0,0,0,1">
            <MenuItem Header="文件">
                <MenuItem Header="新建模板"/>
                <MenuItem Header="打开模板"/>
                <MenuItem Header="保存模板"/>
                <Separator/>
                <MenuItem Header="导出PDF" Command="{Binding PreviewViewModel.GeneratePdfCommand}"/>
            </MenuItem>
            <MenuItem Header="编辑">
                <MenuItem Header="撤销" Command="{Binding UndoCommand}" />
                <MenuItem Header="重做" Command="{Binding RedoCommand}" />
            </MenuItem>
            <MenuItem Header="视图">
                <MenuItem Header="缩放">
                    <MenuItem Header="50%"/>
                    <MenuItem Header="100%"/>
                    <MenuItem Header="200%"/>
                </MenuItem>
                <Separator/>
                <MenuItem Header="设置" Command="{Binding OpenSettingsCommand}"/>
            </MenuItem>
            <MenuItem Header="帮助">
                <MenuItem Header="关于"/>
            </MenuItem>
        </Menu>

        <!-- 主内容区 -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="350"/>
            </Grid.ColumnDefinitions>

            <!-- 左侧：模板树 -->
            <Grid Grid.Column="0" Margin="5" Background="#F5F5F5">
                <views:TemplateTreeView DataContext="{Binding TemplateTreeViewModel}"/>
            </Grid>

            <!-- 中间：编辑面板 -->
            <Grid Grid.Column="1" Margin="5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,5">
                    <TextBlock Text="编辑面板" FontWeight="Bold" FontSize="16" VerticalAlignment="Center"/>
                    <Button Content="添加文本" Command="{Binding CanvasViewModel.AddTextElementCommand}"/>
                    <Button Content="添加图片" Command="{Binding CanvasViewModel.AddImageElementCommand}"/>
                    <Button Content="添加线条" Command="{Binding CanvasViewModel.AddLineElementCommand}"/>
                </StackPanel>
                <Border Grid.Row="1" BorderBrush="LightGray" BorderThickness="1" Background="White">
                    <!-- 编辑画布 -->
                    <ItemsControl ItemsSource="{Binding Template.Elements}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <Canvas Background="#F8F8F8" Width="800" Height="1000"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemContainerStyle>
                            <Style TargetType="ContentPresenter">
                                <Setter Property="Canvas.Left" Value="{Binding X}"/>
                                <Setter Property="Canvas.Top" Value="{Binding Y}"/>
                            </Style>
                        </ItemsControl.ItemContainerStyle>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <ContentControl Content="{Binding}" ContentTemplateSelector="{StaticResource ElementTemplateSelector}"/>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Border>
            </Grid>

            <!-- 右侧：控件和预览面板 -->
            <Grid Grid.Column="2" Margin="5" Background="#F5F5F5">
                <TabControl>
                    <TabItem Header="属性设置">
                        <views:PropertyPanelView DataContext="{Binding PropertyPanelViewModel}"/>
                    </TabItem>
                    <TabItem Header="预览">
                        <views:PreviewPanelView DataContext="{Binding PreviewViewModel}"/>
                    </TabItem>
                </TabControl>
            </Grid>
        </Grid>
    </Grid>
</Window>