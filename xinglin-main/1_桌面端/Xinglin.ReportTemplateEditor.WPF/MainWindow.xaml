<Window x:Class="Xinglin.ReportTemplateEditor.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Xinglin.ReportTemplateEditor.WPF"
        xmlns:controls="clr-namespace:Xinglin.ReportTemplateEditor.WPF.Controls"
        xmlns:views="clr-namespace:Xinglin.ReportTemplateEditor.WPF.Views"
        xmlns:selectors="clr-namespace:Xinglin.ReportTemplateEditor.WPF.Selectors"
        mc:Ignorable="d"
        Title="报表模板编辑器" Height="768" Width="1366"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <Style TargetType="TabItem">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="10,5"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="10,5"/>
        </Style>
        
        <!-- 元素模板 -->
        <DataTemplate x:Key="ElementTemplate">
            <TextBlock Text="{Binding Type}" Padding="5" Background="LightGray" Margin="2"/>
        </DataTemplate>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" MinHeight="40"/>
            <RowDefinition Height="5"/>
            <RowDefinition Height="*" MinHeight="400"/>
        </Grid.RowDefinitions>

        <!-- 菜单栏 -->
        <Menu Grid.Row="0" Background="#F0F0F0" BorderThickness="0,0,0,1">
            <MenuItem Header="文件">
                <MenuItem Header="新建模板" InputGestureText="Ctrl+N"/>
                <MenuItem Header="打开模板" InputGestureText="Ctrl+O"/>
                <MenuItem Header="保存模板" InputGestureText="Ctrl+S"/>
                <Separator/>
                <MenuItem Header="导出PDF" Command="{Binding PreviewViewModel.GeneratePdfCommand}" InputGestureText="Ctrl+E"/>
            </MenuItem>
            <MenuItem Header="编辑">
                <MenuItem Header="撤销" Command="{Binding UndoCommand}" InputGestureText="Ctrl+Z" />
                <MenuItem Header="重做" Command="{Binding RedoCommand}" InputGestureText="Ctrl+Y" />
                <Separator/>
                <MenuItem Header="编辑模板" Command="{Binding EditTemplateCommand}" InputGestureText="Ctrl+T" />
            </MenuItem>
            <MenuItem Header="视图">
                <MenuItem Header="缩放">
                    <MenuItem Header="50%" InputGestureText="Ctrl+5"/>
                    <MenuItem Header="100%" InputGestureText="Ctrl+1"/>
                    <MenuItem Header="200%" InputGestureText="Ctrl+2"/>
                </MenuItem>
                <Separator/>
                <MenuItem Header="设置" Command="{Binding OpenSettingsCommand}" InputGestureText="Ctrl+P"/>
                <MenuItem Header="快捷键配置" Command="{Binding OpenShortcutConfigCommand}"/>
            </MenuItem>
            <MenuItem Header="帮助">
                <MenuItem Header="关于"/>
            </MenuItem>
        </Menu>
        
        <!-- 行分割器 -->
        <GridSplitter Grid.Row="1" Height="5" VerticalAlignment="Stretch" Background="LightGray" ResizeDirection="Rows" ResizeBehavior="PreviousAndNext" Cursor="SizeNS"/>

        <!-- 主内容区 -->
        <Grid Grid.Row="2" Margin="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300" MinWidth="200" MaxWidth="600"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="*" MinWidth="300"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="2*" MinWidth="400"/>
            </Grid.ColumnDefinitions>

            <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Stretch" Background="LightGray" ResizeDirection="Columns" ResizeBehavior="PreviousAndNext"/>
            <GridSplitter Grid.Column="3" Width="5" HorizontalAlignment="Stretch" Background="LightGray" ResizeDirection="Columns" ResizeBehavior="PreviousAndNext" Cursor="SizeWE"/>

            <!-- 左侧：模板树 -->
            <Border Grid.Column="0" Background="#F5F5F5" CornerRadius="4" BorderBrush="#E0E0E0" BorderThickness="1">
                <views:TemplateTreeView DataContext="{Binding TemplateTreeViewModel}"/>
            </Border>

            <!-- 中间：控件面板 -->
            <Border Grid.Column="2" Background="#F5F5F5" CornerRadius="4" BorderBrush="#E0E0E0" BorderThickness="1">
                <views:ControlPanelView DataContext="{Binding ControlPanelViewModel}"/>
            </Border>

            <!-- 右侧：预览面板 -->
            <Border Grid.Column="4" Background="#F5F5F5" CornerRadius="4" BorderBrush="#E0E0E0" BorderThickness="1">
                <views:PreviewPanelView DataContext="{Binding PreviewViewModel}"/>
            </Border>
        </Grid>
    </Grid>
</Window>