<Window x:Class="Xinglin.Client.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Xinglin.Client.WPF"
        mc:Ignorable="d"
        Title="病理检验报告系统" Height="800" Width="1200">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 标题栏 -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Background="#2c3e50" Margin="10">
            <TextBlock FontSize="20" FontWeight="Bold" VerticalAlignment="Center">病理检验报告系统</TextBlock>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="20,0,0,0" VerticalAlignment="Center">
                <Button Content="新建报告" Margin="0,0,10,0" Padding="10,5" Background="#3498db" Foreground="White" BorderThickness="0" Click="btnNewReport_Click"/>
                <Button Content="保存草稿" Margin="0,0,10,0" Padding="10,5" Background="#95a5a6" Foreground="White" BorderThickness="0" Click="btnSaveDraft_Click"/>
                <Button Content="预览" Margin="0,0,10,0" Padding="10,5" Background="#f39c12" Foreground="White" BorderThickness="0" Click="btnPreview_Click"/>
                <Button Content="打印" Padding="10,5" Background="#2ecc71" Foreground="White" BorderThickness="0" Click="btnPrint_Click"/>
            </StackPanel>
        </StackPanel>

        <!-- 主内容区 -->
        <TabControl Grid.Row="1" Margin="10">
            <!-- 报告录入标签页 -->
            <TabItem Header="报告录入">
                <ScrollViewer>
                    <StackPanel>
                        <!-- 病人信息卡片 -->
                        <Border BorderThickness="1" BorderBrush="#bdc3c7" CornerRadius="5" Margin="0,0,0,10">
                            <StackPanel Margin="10">
                                <TextBlock FontSize="16" FontWeight="Bold" Margin="0,0,0,10">病人信息</TextBlock>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <StackPanel Grid.Column="0" Grid.Row="0" Margin="5">
                                        <TextBlock>姓名:</TextBlock>
                                        <TextBox Name="txtPatientName" Margin="0,2,0,0"/>
                                    </StackPanel>
                                    <StackPanel Grid.Column="1" Grid.Row="0" Margin="5">
                                        <TextBlock>性别:</TextBlock>
                                        <ComboBox Name="cmbGender" Margin="0,2,0,0">
                                            <ComboBoxItem>男</ComboBoxItem>
                                            <ComboBoxItem>女</ComboBoxItem>
                                        </ComboBox>
                                    </StackPanel>
                                    <StackPanel Grid.Column="2" Grid.Row="0" Margin="5">
                                        <TextBlock>年龄:</TextBlock>
                                        <TextBox Name="txtAge" Margin="0,2,0,0"/>
                                    </StackPanel>
                                    <StackPanel Grid.Column="3" Grid.Row="0" Margin="5">
                                        <TextBlock>身份证号:</TextBlock>
                                        <TextBox Name="txtIdCardNumber" Margin="0,2,0,0"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="0" Grid.Row="1" Margin="5">
                                        <TextBlock>联系方式:</TextBlock>
                                        <TextBox Name="txtContactNumber" Margin="0,2,0,0"/>
                                    </StackPanel>
                                    <StackPanel Grid.Column="1" Grid.Row="1" Margin="5">
                                        <TextBlock>科室:</TextBlock>
                                        <TextBox Name="txtDepartment" Margin="0,2,0,0"/>
                                    </StackPanel>
                                    <StackPanel Grid.Column="2" Grid.Row="1" Margin="5">
                                        <TextBlock>医生:</TextBlock>
                                        <TextBox Name="txtDoctor" Margin="0,2,0,0"/>
                                    </StackPanel>
                                    <StackPanel Grid.Column="3" Grid.Row="1" Margin="5">
                                        <TextBlock>就诊日期:</TextBlock>
                                        <DatePicker Name="dpVisitDate" Margin="0,2,0,0"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="0" Grid.Row="2" Margin="5" Grid.ColumnSpan="2">
                                        <TextBlock>住院号:</TextBlock>
                                        <TextBox Name="txtHospitalizationNumber" Margin="0,2,0,0"/>
                                    </StackPanel>
                                    <StackPanel Grid.Column="2" Grid.Row="2" Margin="5" Grid.ColumnSpan="2">
                                        <TextBlock>床号:</TextBlock>
                                        <TextBox Name="txtBedNumber" Margin="0,2,0,0"/>
                                    </StackPanel>
                                </Grid>
                            </StackPanel>
                        </Border>

                        <!-- 报告项目卡片 -->
                        <Border BorderThickness="1" BorderBrush="#bdc3c7" CornerRadius="5">
                            <StackPanel Margin="10">
                                <TextBlock FontSize="16" FontWeight="Bold" Margin="0,0,0,10">报告项目</TextBlock>
                                <DataGrid Name="dgReportItems" AutoGenerateColumns="False" CanUserAddRows="True">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="项目名称" Binding="{Binding Name}" Width="*"/>
                                        <DataGridTextColumn Header="项目代码" Binding="{Binding Code}" Width="100"/>
                                        <DataGridTextColumn Header="项目值" Binding="{Binding Value}" Width="100"/>
                                        <DataGridTextColumn Header="参考范围" Binding="{Binding ReferenceRange}" Width="150"/>
                                        <DataGridTextColumn Header="单位" Binding="{Binding Unit}" Width="80"/>
                                        <DataGridTextColumn Header="状态" Binding="{Binding Status}" Width="80"/>
                                        <DataGridTextColumn Header="描述" Binding="{Binding Description}" Width="*"/>
                                    </DataGrid.Columns>
                                </DataGrid>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- 历史报告标签页 -->
            <TabItem Header="历史报告">
                <StackPanel Margin="10">
                    <TextBlock FontSize="16" FontWeight="Bold" Margin="0,0,0,10">历史报告查询</TextBlock>
                    <DataGrid Name="dgHistoryReports" AutoGenerateColumns="True">
                    </DataGrid>
                </StackPanel>
            </TabItem>

            <!-- 系统设置标签页 -->
            <TabItem Header="系统设置">
                <StackPanel Margin="10">
                    <TextBlock FontSize="16" FontWeight="Bold" Margin="0,0,0,10">系统设置</TextBlock>
                    <!-- 系统设置内容 -->
                </StackPanel>
            </TabItem>
        </TabControl>

        <!-- 状态栏 -->
        <Border Grid.Row="2" BorderThickness="1,1,0,0" BorderBrush="#bdc3c7">
            <StackPanel Orientation="Horizontal" Background="#ecf0f1" Margin="10">
                <TextBlock Name="lblStatus" VerticalAlignment="Center">就绪</TextBlock>
                <TextBlock Name="lblVersion" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="20,0,0,0">版本: 1.0.0</TextBlock>
            </StackPanel>
        </Border>
    </Grid>
</Window>
